# ============================================
# üîê VOYAGER CLOUDDB - ENVIRONMENT VARIABLES
# ============================================
# Copia este archivo a .env y configura tus valores
# ============================================

# === DATABASE CONFIGURATION (Backend Database) ===
DB_HOST=your_database_host
DB_PORT=5432
DB_NAME=crud_cloud_db
DB_USER=postgres
DB_PASSWORD=your_secure_password

# === JWT CONFIGURATION ===
JWT_SECRET=your_secret_key_minimum_32_characters_long
JWT_ISSUER=CrudCloudDb.API
JWT_AUDIENCE=CrudCloudDb.Frontend
JWT_EXPIRY_MINUTES=1440

# === EMAIL CONFIGURATION ===
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_SENDER_EMAIL=your_email@gmail.com
SMTP_SENDER_NAME=PotterCloud
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password
SMTP_ENABLE_SSL=true

# === DATABASE HOSTS (Para ConnectionStrings de usuarios finales) ===
DB_HOST_POSTGRESQL=localhost
DB_HOST_MYSQL=localhost
DB_HOST_MONGODB=localhost

# === TIMEZONE ===
TIMEZONE_ID=SA Pacific Standard Time

